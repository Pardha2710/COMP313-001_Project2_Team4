
@{
    ViewData["Title"] = "Returns";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--================Blog Area =================-->
<section class="blog_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="blog_left_sidebar">
                    <article class="blog_item">
                        <div class="blog_item_img">
                            <img class="card-img rounded-0" src="img/blog/single_blog_1.png" alt="">

                        </div>

                        <div class="blog_details">
                            <a class="d-inline-block" href="single-blog.html">
                                <h2>Return Policy</h2>
                            </a>
                            <ul>
                                <li>
                                    Regular-priced items may be returned for reimbursement within 30 days of purchase (in the same condition as they were received).
                                </li>
                                <li>

                                    Liquidation and lot items are final sale and therefore non-refundable.
                                </li>
                                <li>

                                    The shipping cost to return an item is assumed by the customer.
                                </li>
                                <li>


                                    Shipping fees are non-refundable.
                                </li>
                                <li>

                                    A restocking fee of 15% will be retained.
                                </li>

                                <li>
                                    *For orders that had received free shipping: If the order total (after refund) would have no longer made the order eligible for free shipping, the actual shipping cost will be retained from the refund amount.
                                </li>
                             </ul>

                        </div>
                    </article>

                    


                </div>
            </div>

        </div>
    </div>
    </div>
</section>
